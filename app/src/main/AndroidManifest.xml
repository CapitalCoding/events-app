<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.dbccompany.sicred">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SicredApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.event.EventDetailActivity"
            android:parentActivityName=".presentation.board.BoardActivity"
            ></activity>
        <activity
            android:name=".presentation.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.MainActivity" />
        <activity android:name=".presentation.board.BoardActivity"  />
    </application>

</manifest>